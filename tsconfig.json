{
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "lib": ["DOM", "ES2015"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": "./client/",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./client/src/**/*"],
}